<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> unable to save this product:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>
  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.text_field :quantity %>
  </div>
  <div>
  <%= form.label :availability, style: "display: block" %>
  <%= form.select :availability, [["true", "true"], ["false", "false"]], selected: "Yes" %>
  </div>
  <div>
  <%= form.label :subcategory, style: "display: block" %>
  <%= form.select :category, [["Grocery", "Grocery"], ["Food", "Grocery"], ["Sports", "Grocery"],["Technology", "Grocery"]], selected: "Technology" %>
  </div>
  <div>
  <%= form.label :Photo, style: "display: block" %>
  <%= form.file_field :image %>
  </div>

  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
